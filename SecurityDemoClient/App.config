<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <system.serviceModel>

    <behaviors>
      <endpointBehaviors>
        <behavior name="endpointBehavior">
          <clientCredentials>
            <clientCertificate storeLocation="CurrentUser" storeName="My" x509FindType="FindBySubjectName" findValue="WCFClientPK"/>
            <!--服务端证书验证方法，有多种模式可选，不进行验证-->
            <serviceCertificate>
              <authentication certificateValidationMode="None"/>
            </serviceCertificate>
          </clientCredentials>
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <bindings>
      <wsHttpBinding>
        <binding name="WSHttpBinding_SecurityService" allowCookies="false">
          <security mode="Message">
            <transport clientCredentialType="None" proxyCredentialType="None"
              realm="" />
            <message clientCredentialType="Certificate" negotiateServiceCredential="true"
              algorithmSuite="Default" establishSecurityContext="true" />
          </security>
        </binding>

      </wsHttpBinding>
    </bindings>

    <client>
      <endpoint address="http://localhost:8080/SecurityDemo/SecurityServiceImpl" behaviorConfiguration="endpointBehavior"
        binding="wsHttpBinding" bindingConfiguration="WSHttpBinding_SecurityService"
        contract="ServiceProxy.SecurityService" name="WSHttpBinding_SecurityService" >
        <!--这里是引用服务ide自动生成的，是服务端的信息，因此唯一，不需要考虑发布部署时不同机器的问题-->
        <identity>
          <certificate encodedValue="" />
        </identity>
      </endpoint>

    </client>
  </system.serviceModel>

</configuration>